<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="telepesa_secure_prefs.xml"/>
        <exclude domain="sharedpref" path="telepesa_user_prefs.xml"/>
        <exclude domain="database" path="telepesa.db"/>
        <exclude domain="database" path="telepesa.db-shm"/>
        <exclude domain="database" path="telepesa.db-wal"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="telepesa_secure_prefs.xml"/>
        <exclude domain="database" path="telepesa.db"/>
        <exclude domain="database" path="telepesa.db-shm"/>
        <exclude domain="database" path="telepesa.db-wal"/>
    </device-transfer>
</data-extraction-rules>


