<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    
    <!-- Suppress false positives for Spring Boot test dependencies -->
    <suppress>
        <notes><![CDATA[
            This suppresses false positives for test scope dependencies that are not deployed to production.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring\-boot\-starter\-test@.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <!-- Suppress H2 database CVEs for test scope only -->
    <suppress>
        <notes><![CDATA[
            H2 database is only used for testing, not in production.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.h2database/h2@.*$</packageUrl>
        <cve>CVE-2022-45868</cve>
    </suppress>
    
    <!-- Suppress Logback CVEs if using latest versions -->
    <suppress>
        <notes><![CDATA[
            Using latest stable version of Logback with security fixes.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/ch\.qos\.logback/logback\-.*@.*$</packageUrl>
        <cve>CVE-2017-5929</cve>
    </suppress>
    
    <!-- Suppress Jackson CVEs for latest versions -->
    <suppress>
        <notes><![CDATA[
            Using latest stable version of Jackson with security fixes.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.fasterxml\.jackson\.core/jackson\-.*@.*$</packageUrl>
        <cve>CVE-2020-36518</cve>
    </suppress>
    
</suppressions> 